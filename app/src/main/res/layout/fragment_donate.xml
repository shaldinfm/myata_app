<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DonateFragment"
        android:fitsSystemWindows="true"
        android:background="#1C4771"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="26.5sp"
            android:text="ПОМОЧЬ ПРОЕКТУ"
            android:gravity="center"
            android:id="@+id/title"
            android:fontFamily="@font/mullerregular"
            android:textColor="#FFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/webView"
                        android:visibility="gone"
                        tools:ignore="Suspicious0dp" />

                    <LinearLayout
                        android:id="@+id/form"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        tools:ignore="Suspicious0dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_height="77dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <HorizontalScrollView
                                android:layout_height="0dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="90dp"
                                android:orientation="horizontal"
                                android:layout_weight="7"
                                android:id="@+id/summs"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <Button
                                        android:id="@+id/sum100"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:fontFamily="@font/mullerheavy"
                                        android:text="100"
                                        android:textColor="#1C4771"
                                        android:textSize="20sp"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="7dp"
                                        />

                                    <Button
                                        android:id="@+id/sum200"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:fontFamily="@font/mullerheavy"
                                        android:text="200"
                                        android:textColor="#1C4771"
                                        android:textSize="20sp"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum500"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/black"
                                        android:textColor="#1C4771"
                                        android:fontFamily="@font/mullerheavy"
                                        android:text="500"
                                        android:textSize="20sp"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum1000"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:textSize="20sp"
                                        android:fontFamily="@font/mullerheavy"
                                        android:text="1000"
                                        android:textColor="#1C4771"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum0"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:text="Другая\nсумма"
                                        android:textColor="#1C4771"
                                        android:fontFamily="@font/mullerheavy"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                </LinearLayout>

                            </HorizontalScrollView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <EditText
                            android:paddingTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:hint="Комментарий"
                            android:fontFamily="@font/mullerregular"
                            android:gravity="top"
                            android:maxHeight="164dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_text"
                            android:background="@drawable/comment_bg"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="match_parent" />

                        <Button
                            android:fontFamily="@font/mullerblack"
                            android:textAllCaps="false"
                            android:id="@+id/sendBtn"
                            android:text="ОТПРАВИТЬ"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/send_btn"/>

                        <HorizontalScrollView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal"
                            android:id="@+id/boosty_banners"
                            android:scrollbars="none"
                            android:paddingBottom="80dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="21dp"
                                    android:layout_marginEnd="7dp"
                                    android:src="@drawable/boosty_79"
                                    android:id="@+id/boosty_79_banner"
                                    android:clipToOutline="true"
                                    android:outlineProvider="background"
                                    android:background="@drawable/rounded_banner_bg"
                                    android:elevation="4dp"
                                    android:contentDescription="Boosty 79₽"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="7dp"
                                    android:src="@drawable/boosty_249"
                                    android:id="@+id/boosty_249_banner"
                                    android:clipToOutline="true"
                                    android:outlineProvider="background"
                                    android:background="@drawable/rounded_banner_bg"
                                    android:elevation="4dp"
                                    android:contentDescription="Boosty 249₽"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="7dp"
                                    android:src="@drawable/boosty_499"
                                    android:id="@+id/boosty_499_banner"
                                    android:clipToOutline="true"
                                    android:outlineProvider="background"
                                    android:background="@drawable/rounded_banner_bg"
                                    android:elevation="4dp"
                                    android:contentDescription="Boosty 499₽"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="21dp"
                                    android:src="@drawable/boosty_1499"
                                    android:id="@+id/boosty_1499_banner"
                                    android:clipToOutline="true"
                                    android:outlineProvider="background"
                                    android:background="@drawable/rounded_banner_bg"
                                    android:elevation="4dp"
                                    android:contentDescription="Boosty 1499₽"/>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>